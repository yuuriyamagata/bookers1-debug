<p>
  <%= flash[:notice] %>
</p>

<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <%end%>

<%= form_with model: @book do |f| %>
    <div>
    <%= f.label :title %>
    </div>
    <%= f.text_field :title %>
    <div>
    <%= f.label :body %>
    </div>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>

<%= link_to 'Show', book_path(@book.id) %> |
<%= link_to 'Back', books_path %>
